@import "vendor/normalize.css"
@import "vendor/icomoon.css"
@import "vendor/gridism"

body
  background #fafafa
  font-family 'Vollkorn', Georgia, Times New Roman, serif
  line-height 140%
  font-size 16px
  padding-bottom 40px
  /*
   * Gridism
   * A simple, responsive, and handy CSS grid by @cobyism
   * https://github.com/cobyism/gridism
   */
.icon
  font-size 30px
  opacity 0.5
  transition opacity 0.2s
  text-decoration none
  &:hover
    opacity 1
    cursor pointer
    text-decoration none
.paper, .paper-shadow
  box-shadow 0 0 5px rgba(0,0,0,0.15)

.left-menu
  width 0
  position absolute
  transition all ease-out 0.35s
  z-index 100
  top 40px
  .link-container
    transition all ease-out 0.35s
  a
    display block
    white-space nowrap
    overflow hidden
    color black
    box-shadow: 0 0 5px rgba(0,0,0,0.2)
    display: block
    width: 80%
    height:80%
    background: white
    border-radius: 50%
    margin: 10%
    // transform scale(0)
.black-screen
  background rgba(0,0,0,0.7)
  width: 100%
  height: 100%
  position: fixed
  z-index 11
.image-slider
  transition height 0.3s ease-in-out
  position relative
  > *
    display inline-block

.inner-slider
  transition all 0.5s ease-out
  position absolute
  top 0
  left 0
  width 10000px
  white-space: nowrap
  font-size: 0
  cursor pointer
.slider-nav
  width 100%
  padding-top 10px
  &:after
    clear: both
.slider-move
  width 40px
  height 40px
  border-radius 20px
  background #eee
  color rgba(0,0,0,0.3)
  display: block
  font-size 40px
  text-alignc enter
  &:hover
    cursor pointer
    background #ddd
.paper
  background white
  box-sizing border-box
  padding 15px
  margin-bottom 20px
  a
    transition background .15s cubic-bezier(.33,.66,.66,1)
    text-decoration none
    color inherit
    box-sizing border-box
  hr
    border-bottom 1px solid #eee
    border-style none none solid none
    background transparent
    margin 10px -15px
  &.thick
    padding 15px 30px
    hr
      margin 15px -30px
a
  text-decoration none
a:hover
  text-decoration underline
p a
  box-shadow inset 0 -3px 0 #fff, inset 0 -8px 0px #cbe8ff
  &:hover
    background #cbe8ff
h2 a
  text-decoration none
  &:hover
    text-decoration underline
//   box-shadow inset 0 -3px 0 #fff, inset 0 -10px 0px #cbe8ff
.text-small p
  font-size 14px 
  line-height 130%    
  a
    box-shadow inset 0 -2px 0 #fff, inset 0 -7px 0px #cbe8ff

.subtle-corner
  border-radius 3px
h1, h2, h3, h4, h5, p
  margin 10px 0
  
h2
  font-size 20px
  font-weight normal
h3
  text-transform uppercase
  font-size 13px
.tag-noclick
  background #f2f2f2
  border-radius 5px
  padding 2px 10px 0
  line-height 23px
  display inline-block
  margin 0 5px 5px
/* Responsive Stuff */
@media screen and (max-width: 568px)
  /* Stack anything that isnâ€™t full-width on smaller screens 
     and doesn't provide the no-stacking-on-mobiles class */
  .grid:not(.no-stacking-on-mobiles) > .unit 
    width: 100% !important
    padding-left: 20px
    padding-right: 20px
    
  .unit .grid .unit 
    padding-left: 0px
    padding-right: 0px
  

  /* Sometimes, you just want to be different on small screens */
  .center-on-mobiles 
    text-align: center !important
  
  .hide-on-mobiles 
    display: none !important
  
  .only-on-mobiles 
    display: block !important
@media screen and (max-width: 1180px) 
  h3
    text-align center
@media screen and (min-width: 1180px) 
  .wider .grid,
  .grid.wider 
    max-width: 1180px
    margin: 0 auto
/* Expand the wrap a bit further on larger screens */
@media screen and (min-width: 1180px) 
  .wider .grid,
  .grid.wider 
    max-width: 1180px
    margin: 0 auto
  
